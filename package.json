    "events",
    "negotiate",
    "notification",
    "notifications",
    "subscription"
  ],
  "author": "Rahul Gupta",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CxRes/express-negotiate-events.git"
  },
  "type": "module",
  "main": "src/index.js",
  "exports": "./src/index.js",
  "dependencies": {
    "debug": "^4.3.5",
    "structured-headers": "npm:@cxres/structured-headers@2.0.0-nesting.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/compat": "^1.2.0",
    "@eslint/js": "^9.12.0",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/eslint-plugin": "^1.1.7",
    "cspell": "^8.14.4",
    "dedent": "^1.5.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "globals": "^15.10.0",
    "headright": "^0.1.1",
    "husky": "^9.1.6",
    "knip": "^5.33.2",
    "lint-staged": "^15.2.10",
    "parse-gitignore": "^2.0.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.2"
  },
  "scripts": {
    "format": "prettier * --check",
    "header": "hr --dry --verbose \"**\"",
    "header:modify": "hr --verbose \"**\"",
    "lint": "pnpm run --reporter=append-only --aggregate-output \"/(^lint:.*|format)/\"",
    "lint:code": "eslint .",
    "lint:header": "hr --dry \"**\"",
    "lint:knip": "knip",
    "lint:packages": "pnpm dedupe --check --silent",
    "lint:spelling": "cspell --dot --quiet \"**\"",
    "prepare": "node .husky/install.js",
    "prepublishOnly": "pnpm run lint",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  }
